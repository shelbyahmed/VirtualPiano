<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music"
    tools:context="com.example.shub.virtualpiano.MainActivity">

    <TextView
        android:layout_width="332dp"
        android:layout_height="140dp"
        android:text="Welcome to Virtual Piano!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="21pt"
        android:id="@+id/welcome_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintVertical_bias="0.327" />

    <Button
        android:id="@+id/button"
        android:layout_width="122dp"
        android:layout_height="78dp"
        android:text="Piano"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:onClick="Piano"
        android:textSize="15pt"
        android:layout_below ="@+id/welcome_text_view"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text_view"
        android:layout_marginLeft="131dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="86dp"
        android:text="Piano Media"
        android:onClick="PianoMedia"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="12pt"
        android:layout_below ="@+id/welcome_text_view"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text_view"
        android:layout_marginLeft="132dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="118dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="71dp"
        android:layout_height="56dp"
        android:src="@drawable/musicicn"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/welcome_text_view"
        android:layout_marginLeft="167dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
